<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="ParallelSuite" parallel="tests" thread-count="2">

	<!-- Chrome test: runs ONLY ToggleButtonDemoTest and HideShowDemoTest using 
		Chrome -->
	<test name="Chrome Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="m1.ToggleButtonDemoTest" />
			<class name="m1.HideShowDemoTest" />
		</classes>
	</test>

	<!-- Firefox test: runs ONLY ToggleButtonDemoTest and HideShowDemoTest using 
		Firefox -->
	<test name="Firefox Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="m1.ToggleButtonDemoTest" />
			<class name="m1.HideShowDemoTest" />
		</classes>
	</test>

	<!-- listeners at the suite level -->
	<listeners>
		<listener class-name="listeners.ExtentListener" />
	</listeners>

</suite>
